@using WebNewBook.Model
@model PhieuNhap

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <h1 class="text-danger">@ViewBag.Error</h1>
}

<style>

    

</style>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaSach" class="control-label">Sách</label>
                <select asp-for="MaSach" class="form-control" asp-items="ViewBag.Sachs" id="listbook"></select>
                <span asp-validation-for="MaSach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaNhap" class="control-label">Giá nhập</label>
                <input asp-for="GiaNhap" class="form-control" />
                <span asp-validation-for="GiaNhap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuongNhap" class="control-label">Số lượng nhập</label>
                <input asp-for="SoLuongNhap" class="form-control" />
                <span asp-validation-for="SoLuongNhap" class="text-danger"></span>
            </div>
            <input asp-for="ID_PhieuNhap" value="PN" hidden />
            <input asp-for="MaNhanVien" value="Null" hidden/>
            <button type="submit" class="btn btn-primary">Nhập phiếu</button>
        </form>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.8/js/select2.min.js" defer></script>

@section scripts
    {
<script>
    $(document).ready(function () {
        $("#listbook").select2();
    });
</script>
}




