@{
	ViewBag.Title = "Home Page";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BREADCRUMB -->

		<div id="breadcrumb" class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<div class="col-md-12">
						<ul class="breadcrumb-tree">
							<li><a href="#">Home</a></li>
							<li><a href="#">Book</a></li>
							
						</ul>
					</div>
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /BREADCRUMB -->

<!-- SECTION -->
	<div class="section">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<!-- Product main img -->
				<div class="col-md-5 col-md-push-2">
					<div id="product-main-img">
						<div class="product-preview">
							<img src="./img/product01.png" alt="">
						</div>

						<div class="product-preview">
							<img src="./img/product03.png" alt="">
						</div>

						<div class="product-preview">
							<img src="./img/product06.png" alt="">
						</div>

						<div class="product-preview">
							<img src="./img/product08.png" alt="">
						</div>
					</div>
				</div>
				<!-- /Product main img -->
				<!-- Product thumb imgs -->
				<div class="col-md-2  col-md-pull-5">
					<div id="product-imgs">
						<div class="product-preview">
							<img src="./img/product01.png" alt="">
						</div>

						<div class="product-preview">
							<img src="./img/product03.png" alt="">
						</div>

						<div class="product-preview">
							<img src="./img/product06.png" alt="">
						</div>

						<div class="product-preview">
							<img src="./img/product08.png" alt="">
						</div>
					</div>
				</div>
				<!-- /Product thumb imgs -->
				<!-- Product details -->
				<div class="col-md-5">
					<div class="product-details">
					<h2 class="product-name">
						@if (ViewBag.test != null)
							@ViewBag.test.sanPhams.TenSanPham



						</h2>

						<div>

							<h3 class="product-price">  
							@if (ViewBag.test != null)
							{
								@ViewBag.test.sanPhams.GiaBan
							}
							<del class="product-old-price"></del></h3>

						</div>
						
						
						<ul class="product-links">
							<li>Nhà xuất bản:</li>
							<li><a href="#">Kinh đồng</a></li>
						</ul>
						<ul class="product-links">
							<li>Tác giả:</li>
						@foreach (var item in ViewBag.TacGia)
						{
							<li><a href="#">@item.HoVaTen</a></li>

						}	
						</ul>
						<br>
					<form asp-controller="GioHang" asp-action="AddToCart" asp-route-id="@ViewBag.test.sanPhams.ID_SanPham ">
						<div class="add-to-cart">
							<div class="qty-label">
								Số lượng
								<div class="input-number">
									<input name="SoLuong" type="number" value="1">
									<span class="qty-up">+</span>
									<span class="qty-down">-</span>
								</div>
							</div>
							<button onclick="addtocart(${@ViewBag.test.sanPhams.ID_SanPham})" class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ</button>
						</div></form>



						<ul class="product-links">
							<li>Thể loại:</li>
							@if(ViewBag.TheLoai != null)
						@foreach (var item in ViewBag.TheLoai)
						{
							<li><a href="#">@item.TenTL</a></li>

						}
							
						</ul>



					</div>
				</div>
				<!-- /Product details -->
				<!-- Product tab -->
				<div class="col-md-12">
					<div id="product-tab">
						<!-- product tab nav -->
						<ul class="tab-nav">
							<li class="active"><a data-toggle="tab" href="#tab1">Mô tả</a></li>
							<li><a data-toggle="tab" href="#tab2">Chi tiết</a></li>

						</ul>
						<!-- /product tab nav -->
						<!-- product tab content -->
						<div class="tab-content">
							<!-- tab1  -->
							<div id="tab1" class="tab-pane fade in active">
								<div class="row">
									<div class="col-md-12">
										<p>
										@if (ViewBag.test != null)
											@ViewBag.test.sach.MoTa

										</p>
									</div>
								</div>
							</div>
							<!-- /tab1  -->
							<!-- tab2  -->
							<div id="tab2" class="tab-pane fade in">
								<div class="row">
									<div class="col-md-12" style="
									 justify-content;
									 font-weight: bold;
                                      font-size:20px;
                                      text-align:center;">
										
									@if (ViewBag.test != null){
										<!-- On rows -->
										



										<p>Tên sách :@ViewBag.test.sach.TenSach </p>
										<p>Số lượng :  @ViewBag.test.sach.SoTrang</p>
										<p>Tái bản : @ViewBag.test.sach.TaiBan</p>
										<p>Số lượng :	@ViewBag.test.sach.SoLuong</p>
									}
									
										


									</div>
								</div>
							</div>
							<!-- /tab2  -->


						</div>
						<!-- /product tab content  -->
					</div>
				</div>
				<!-- /product tab -->
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
		<!-- /SECTION -->