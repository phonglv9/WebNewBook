@{
	ViewBag.Title = "Home Page";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- SECTION -->
@if (ViewBag.SanphamCT != null)
{
	<div class="section">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<!-- Product main img -->
				<div class="col-md-5 col-md-push-2">
					<div id="product-main-img">
						<div class="product-preview">
							<img src="~/img/@ViewBag.SanphamCT.HinhAnh" alt="">
						</div>

						<div class="product-preview">
							<img src="~/img/@ViewBag.SanphamCT.HinhAnh" alt="">
						</div>


					</div>
				</div>
				<!-- /Product main img -->
				<!-- Product thumb imgs -->
				<div class="col-md-2  col-md-pull-5">
					<div id="product-imgs">
						<div class="product-preview">
							<img src="~/img/@ViewBag.SanphamCT.HinhAnh" alt="">
						</div>

						<div class="product-preview">
							<img src="~/img/@ViewBag.SanphamCT.HinhAnh" alt="">
						</div>

					</div>
				</div>
				<!-- /Product thumb imgs -->
				<!-- Product details -->
				<div class="col-md-5">
					<div class="product-details">
						<h2 class="product-name">

							@ViewBag.SanphamCT.TenSanPham



						</h2>

						<div>

							<h3 class="product-price">


								@ViewBag.SanphamCT.GiaBan.ToString("#,##0").Replace(',', '.')đ

								<del class="product-old-price"></del>
							</h3>

						</div>


						<ul class="product-links">
							<li>Nhà xuất bản:</li>
							<li><a href="#">Kinh đồng</a></li>
						</ul>
						<ul class="product-links">
							<li>Tác giả:</li>
							@if (ViewBag.TacGia != null)
							@foreach (var item in ViewBag.TacGia)
							{

									<li><a href="#">@item</a></li>


							}
						</ul>
						<br>
						<form asp-controller="GioHang" asp-action="AddToCartCT" >
							<div class="add-to-cart">
								<div class="qty-label">
									Số lượng
									<div class="input-number">
										<input id="getvalue" name="SoLuong" type="number" value="1">
										<input id="getvalue" name="id" type="hidden" value="@ViewBag.SanphamCT.ID_SanPham">

										<span class="qty-up">+</span>
										<span class="qty-down">-</span>
									</div>
								</div>

								@if (ViewBag.SanphamCT.SoLuong < 1)
								{
									<div class="bg-warning" style="width:200px; padding:10px; margin:5px; border-radius:5px;"><strong> Sản phẩm tạm hết hàng</strong></div>

								}else{
								<button data-toggle="modal" data-target="#exampleModalCart" type="submit"  class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ</button>
								}
							</div>
						</form>



						<ul class="product-links">
							<li>Thể loại:</li>
							@if (ViewBag.TheLoai != null)

								@foreach (var item in ViewBag.TheLoai)
								{
									
									<li><a href="#">@item</a></li>

								}

						</ul>



					</div>
				</div>
				<!-- /Product details -->
				<!-- Product tab -->
				<div class="col-md-12">
					<div id="product-tab">
						<!-- product tab nav -->
						<ul class="tab-nav">
							<li class="active"><a data-toggle="tab" href="#tab1">Mô tả</a></li>
							<li><a data-toggle="tab" href="#tab2">Chi tiết</a></li>

						</ul>
						<!-- /product tab nav -->
						<!-- product tab content -->
						<div class="tab-content">
							<!-- tab1  -->
							<div id="tab1" class="tab-pane fade in active">
								<div class="row">
									<div class="col-md-12">
										
												
											
											
											@if (ViewBag.Mota !=null)
											@foreach (var item in ViewBag.Mota){


												<h4 class="title"> @item.TenSach</h4>
												<p> @item.Mota</p>
												
											}
									</div>
								</div>
							</div>
							<!-- /tab1  -->
							<!-- tab2  -->
							<div id="tab2" class="tab-pane fade in">
								<div class="row">
									<div class="col-md-3">
									</div>
									<div class="col-md-6">


										@if(ViewBag.CheckBook!=null)
											@if (ViewBag.CheckBook<=3)
											{
												<table class="table table-hover ">
													<tbody>

														<tr>
															<td>Tên sách :</td>
															<td class="col-2">@ViewBag.SanphamCT.TenSanPham</td>
														</tr>
														<tr>
															<td>Số trang :</td>
															<td> @ViewBag.SanphamCT.sotrang</td>
														</tr>
														<tr>
															<td>Tái bản :</td>
															<td> @ViewBag.SanphamCT.taiban</td>
														</tr>
														<tr>
															<td>Số lượng : </td>
															<td>@ViewBag.SanphamCT.SoLuong</td>
														</tr>

														<tr>
															<td>Tên nhà xuất bản : </td>
															<td>@ViewBag.SanphamCT.TenNhaXuatBan</td>
														</tr>

													</tbody>
												</table>
										}
										else{
												<table class="table table-hover ">
													<tbody>

														<tr>
															<td>Tên sản phẩm :</td>
															<td class="col-2">@ViewBag.SanphamCT.TenSanPham</td>
														</tr>
														<tr>
															<td>Số lượng : </td>
															<td>@ViewBag.SanphamCT.SoLuong</td>
														</tr>

														<tr>
															<td>Tên nhà xuất bản : </td>
															<td>@ViewBag.SanphamCT.TenNhaXuatBan</td>
														</tr>

													</tbody>
												</table>

										}
									


									</div>
									<div class="col-md-3">
									</div>
								</div>
							</div>
							<!-- /tab2  -->


						</div>
						<!-- /product tab content  -->
					</div>
				</div>
				<!-- /product tab -->
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
}
	
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">

			<!-- section title -->
			<div class="col-md-12">
				<div class="section-title">
					<h3 class="title">SẢN PHẨM LIÊN QUAN</h3>
					
				</div>
			</div>
			<!-- /section title -->
			<!-- Products tab & slick -->
			<div class="col-md-12">
				<div class="row">
					<div class="products-tabs">
						<!-- tab -->
						<div id="tab1" class="tab-pane fade in active">
							<div class="box-container">
								<div class="products-slick" data-nav="#slick-nav-2">
									
											@*@if (ViewBag.listDM.Count)*@
										@foreach (var a in ViewBag.listDM)
											{
												var giamGia = 100 - a.GiaBan * 100 / a.GiaGoc;
												<!-- product -->
												<div class="product">
													<div class="product-img">
													<img src="~/img/@a.HinhAnh" alt="">
												@if (giamGia != 0)
												{
													<div class="product-label">

														<span class="sale">@giamGia %</span>

													</div>
												}
													</div>

													<div class="product-body">
														
																<p class="product-category">

													              @a.TenDanhMuc


																</p>

												<h3 class="product-name"><a asp-action="ProductDetaill" asp-route-id="@a.ID_SanPham"> @a.TenSanPham</a> </h3>
												<h4 class="product-price"> @a.GiaBan.ToString("#,##0").Replace(',', '.')đ <del class="product-old-price"> </del></h4>


													</div>
													<div class="add-to-cart">
														<button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ</button>
													</div>
												</div>
											}

									
									
								</div>
							</div>
							<div id="slick-nav-2" class="products-slick-nav"></div>
						</div>
						<!-- /tab -->
					</div>
				</div>
			</div>
			<!-- /Products tab & slick -->
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>