@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 3;

}

@model IEnumerable<WebNewBook.API.ModelsAPI.HomeViewModel>

<!-- Carousel Fixed Height -->
<div class="section carousel-fixed-height">
    <div id="carousel-fixed-height" class="container carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel-fixed-height" data-slide-to="0" class=""></li>
            <li data-target="#carousel-fixed-height" data-slide-to="1" class=""></li>
            <li data-target="#carousel-fixed-height" data-slide-to="2" class="active"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item">
                <img src="~/img/banner-home2.png" style="width:1140px; height: 450px;" alt="Second slide">

            </div>
            <div class="item">
                <img src="~/img/banner-home4.png" style="width:1140px;    height: 450px;" alt="Second slide">

            </div>
            <div class="item active">
                <img src="~/img/banner-home3.png" style="width:1140px ;    height: 450px;" alt="Third slide">

            </div>
        </div>
        <a class="left carousel-control" href="#carousel-fixed-height" role="button" data-slide="prev">
            <span class="fa fa-angle-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-fixed-height" role="button" data-slide="next">
            <span class="fa fa-angle-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>





<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-4 col-xs-6">
                <div class="section-title">
                    <h4 class="title">Sản phẩm mới</h4>
                </div>

                <div class="products-widget-slick">
                    <div>
                        @foreach (var item in ViewBag.NewBook)
                        {


                            <!-- product widget -->
                            <div class="product-widget">
                                <div class="product-img">
                                    <img src="~/img/@item.HinhAnh" alt="">

                                </div>
                                <div class="product-body">
                                    <p class="product-category">@item.TenDanhMuc</p>
                                    <h3 class="product-name"><a asp-action="ProductDetaill" asp-route-id="@item.ID_SanPham">@item.TenSanPham</a></h3>
                                    <h4 class="product-price"> @item.GiaBan.ToString("#,##0").Replace(',', '.')đ<del class="product-old-price">@item.GiaGoc.ToString("#,##0").Replace(',', '.') đ</del></h4>

                                </div>
                            </div>


                            <!-- /product widget -->
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-xs-6">
                <div class="section-title">
                    <h4 class="title">Sản phẩm bán chạy</h4>

                </div>

                <div class="products-widget-slick">
                    <div>
                        @if(ViewBag.SachBanChay != null){
                        @foreach (var item in  ViewBag.SachBanChay)
                        {
                             
                            <!-- product widget -->
                            <div class="product-widget">
                                   
                                <div class="product-img">
                                    <img src="~/img/@item.HinhAnh" alt="">
                                </div>
                                 
                                <div class="product-body">
                                   @* <p class="product-category">@item.TenDanhMuc</p>*@
                                   
                                    <h3 class="product-name"><a asp-action="ProductDetaill" asp-route-id="@item.ID_SanPham">@item.TenSanPham</a></h3>
                                    <h4 class="product-price"> @item.GiaBan.ToString("#,##0").Replace(',', '.') đ<del class="product-old-price">@item.GiaGoc.ToString("#,##0").Replace(',', '.') đ</del></h4>
                                    <div class="number-product">Số lượng đã bán: @item.SoLuongDaBan</div>
                                </div>
                            </div>


                            <!-- /product widget -->
                            }}
                    </div>


                </div>
            </div>

            <div class="clearfix visible-sm visible-xs"></div>

            <div class="col-md-4 col-xs-6">
                <div class="section-title">
                    <h4 class="title">Xu Hướng mua xắm</h4>

                </div>

                <div class="products-widget-slick">
                    <div>
                        @foreach (var item in Model.OrderBy(c => c.TenSanPham).Take(10))
                        {

                            <!-- product widget -->
                            <div class="product-widget">
                                <div class="product-img">
                                    <img src="~/img/@item.HinhAnh" alt="">
                                </div>
                                <div class="product-body">
                                    <p class="product-category">@item.TenDanhMuc</p>
                                    <h3 class="product-name"><a asp-action="ProductDetaill" asp-route-id="@item.ID_SanPham">@item.TenSanPham</a></h3>
                                    <h4 class="product-price"> @item.GiaBan.ToString("#,##0").Replace(',', '.') đ<del class="product-old-price">@item.GiaGoc.ToString("#,##0").Replace(',', '.') đ</del></h4>
                             

                                </div>
                            </div>


                            <!-- /product widget -->
                        }

                    </div>
                </div>

            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
</div>
<!-- /SECTION -->
<!-- /SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <!-- section title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">Sách mới</h3>
                    <div class="section-nav">
                        <ul class="section-tab-nav tab-nav">
                            <li class="active"><a data-toggle="tab" href="#tab1">Xem tất cả</a></li>

                        </ul>
                    </div>
                </div>
            </div>
            <!-- /section title -->
            <!-- Products tab & slick -->
            <div class="col-md-12">
                <div class="row">
                    <div class="products-tabs">
                        <!-- tab -->
                        <div id="tab1" class="tab-pane fade in active">
                            <div class="box-container">

                                <div class="products-slick" data-nav="#slick-nav-1">
                                    <!-- product -->
                                    @foreach (var item in ViewBag.NewBook)
                                    {
                                       
                                        var giamGia = 100 - item.GiaBan * 100 / item.GiaGoc;
                                        var theloai = item.TheLoai == 2 ? "Combo sách" : item.TheLoai == 3 ? "Lô sách " : "Sách";
                                        <div class="product">
                                            
                                          <span class="type-product">@theloai</span>
                                            <div class="product-img">
                                                <img src="~/img/@item.HinhAnh" alt="">


                                                <div class="product-label">
                                                    
                                                    @if (giamGia != 0)
                                                    {
                                                        <span class="sale">@giamGia %</span>
                                                    }
                                                    <span class="new">NEW</span>
                                                   
                                                </div>
                                                

                                            </div>
                                            <div class="product-body">
                                                <p class="product-category">@item.TenDanhMuc</p>
                                                <h3 class="product-name"><a asp-action="ProductDetaill" asp-route-id="@item.ID_SanPham">@item.TenSanPham</a></h3>
                                                <h4 class="product-price"> @item.GiaBan.ToString("#,##0").Replace(',', '.') đ<del class="product-old-price">@item.GiaGoc.ToString("#,##0").Replace(',', '.') đ</del></h4>
                                                <div class="number-product" style="width:100% !important">Số lượng: @item.SoLuong</div>

                                            </div>
                                            @if (item.SoLuong < 1)
                                            {
                                                <div class="add-to-cart">


                                                    <button class="btn btn-warning" type="button"><i class="fa fa-shopping-cart"></i> Sản phẩm tạm hết hàng</button>

                                                </div>
                                            }
                                            else
                                            {
                                                <div class="add-to-cart">


                                                    <button class="add-to-cart-btn" type="button" data-toggle="modal" data-target="#exampleModalCart" class="add-to-cart-btn" value="@item.ID_SanPham"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ</button>

                                                </div>
                                            }

                                        </div>
                                    }

                                    <!-- product /-->
                                </div>

                                <div id="slick-nav-1" class="products-slick-nav"></div>
                            </div>
                        </div>
                        <!-- /tab -->
                    </div>
                </div>
            </div>
            <!-- /Products tab & slick -->

        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
