@using WebNewBook.API.ModelsAPI;
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model ViewHoaDon

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var mess = "";
    var color = "";
    @if (ViewBag.message == "1")
    {
        mess = "Thành công";
        color = "success";
    }
    if (ViewBag.message == "2")
    {
        mess = "Thất bại";
        color = "danger";
    }
}
@section Scripts{
    <script>
        $("#selectHD").change(function () {

            var $form = $(this).closest('form');
            $form.find('button[type=submit]').click();

        });
        setTimeout(function () {
            $('#msHD').fadeOut('slow');
        }, 1500)
    </script>

}


    <div class="container py-3" style="background-color: #f1f1f1;">
        <h3 style="font-weight: 700; text-align:center;">Hóa Đơn</h3>
        <div class="container" style="background-color: rgb(255, 255, 255);">
            <div class="py-3">
                <h6>
                    <div>
                        <form asp-action="Index" class="row">
                            <div class="col-5 mb-3">
                                <input type="text" name="timkiem" class="form-control" placeholder="Mời bạn nhập tên nhà xuất bản để tìm kiếm">
                            </div>
                            <div class="col-2">
                                <button type="submit" class="btn btn-secondary">Tìm kiếm</button>
                            </div>
                            <div class="col-5 mb-3">
                                <select id="selectHD" name="trangThai" class="form-select" aria-label="Default select example">
                                    <option selected>Chọn trạng thái</option>
                                    <option value="10">Tất cả</option>
                                    <option value="0">Không tồn tại</option>
                                    <option value="1">Đặt hàng</option>
                                    <option value="2">Đã thanh toán</option>
                                    <option value="3">Đơn hàng thanh toán thất bại</option>
                                    <option value="4">Trả hàng</option>
                                    <option value="5">Thành công</option>
                                </select>
                            </div>
                        </form>

                       
                    </div>
                </h6>
            </div>
        </div>
        <br>
        <div class="container" style="background-color: rgb(255, 255, 255);">
            <div class="py-3">
            @if (mess != "")
            {
                <div class="alert alert-@color" id="msHD" role="alert">
                    @mess
                </div>
            }
            <p>
                @if (ViewBag.NXB != null)
                {
                    <span>Trang @(ViewBag.NXB.PageCount < ViewBag.NXB.PageNumber ? 0 : ViewBag.NXB.PageNumber) / @ViewBag.NXB.PageCount</span>
                }
                <table class="table">
                    <thead class="table-secondary">
                        <tr>
                            <th>Tên khách hàng</th>
                            <th>Tổng tiền </th>
                            <th>Tên sản phẩm</th>
                            <th>Ngày mua</th>
                            <th>số lượng</th>
                            <th>Trạng Thái</th>
                            <th>Chi Tiết</th>
                            <th>UpDate</th>
                           
                           
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.DataHD.Count == 0)
                        {
                            <tr><th>Không có sản phẩm</th></tr>
                        }
                        else
                        {
                            @foreach (var a in ViewBag.DataHD)
                            {
                                

                                <tr>
                                    <td>@a.KhachHang.HoVaTen</td>
                                    <td>@a.hoaDon.TongTien</td>
                                    <td>@a.sanPham.TenSanPham</td>
                                    <td>@a.hoaDon.NgayMua</td>
                                    <td>@a.hoaDonCT.SoLuong</td>
                                    <td>
                                        @if (@a.hoaDon.TrangThai == 0)
                                        {
                                            <h6 >Không tồn tại</h6>
                                        }
                                        else if (@a.hoaDon.TrangThai == 1)
                                        {
                                            <h6 >Đặt hàng</h6>
                                        }
                                        else if (@a.hoaDon.TrangThai == 2)
                                        {
                                            <h6 >Đã thanh toán</h6>
                                        }
                                        else if (@a.hoaDon.TrangThai == 3)
                                        {
                                            <h6 >Đơn hàng thanh toán thất bại</h6>
                                        }
                                        else if (@a.hoaDon.TrangThai == 4)
                                        {
                                            <h6 >Trả hàng</h6>
                                        }
                                        else
                                        {
                                            <h6 >Thành công </h6>
                                        }
                                    </td>
                                    <td><a asp-action="ChiTiet" asp-route-id="@a.hoaDonCT.ID_HDCT">Chi Tiết</a> </td>
                                    <td>
                                        <form asp-controller="HoaDon" asp-action="Sua" method="post">

                                            @* <input name="dd" type="hidden" value=" @item.hoaDon.ID_HoaDon">*@
                                            <div>
                                                <button type="submit" class="btn btn-primary">Save </button>

                                            </div>
                                            <div>
                                                <select class="form-select" name="name" aria-label="Default select example">
                                                    <option value="0">Không tồn tại</option>
                                                    <option value="1">Đặt hàng</option>
                                                    <option value="2">Đã thanh toán</option>
                                                    <option value="3">Đơn hàng thanh toán thất bại</option>
                                                    <option value="4">Trả hàng</option>
                                                    <option value="5">Thành công</option>

                                                </select>
                                            </div>
                                            <div>
                                                <input name="id" type="hidden" value="@a.hoaDon.ID_HoaDon">

                                            </div>




                                        </form>
                                    </td>

                                   
                                </tr>

                               
                            }
                        }

                    </tbody>

                </table>

                @Html.PagedListPager((IPagedList)ViewBag.DataHD, page => Url.Action("Index","HoaDon",new {timKiem = ViewBag.TimKiem, trangThai =ViewBag.TrangThai, page = page}),new X.PagedList.Web.Common.PagedListRenderOptions{LiElementClasses = new string[] { "page-item" },PageClasses = new string[] { "page-link" }})

            </p>
        </div>
    </div>
</div>


