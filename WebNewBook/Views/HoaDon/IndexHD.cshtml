@using WebNewBook.API.ModelsAPI;
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model ViewHoaDon

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var mess = "";
    var color = "";
    @if (ViewBag.message == "1")
    {
        mess = "Thành công";
        color = "success";
    }
    if (ViewBag.message == "2")
    {
        mess = "Thất bại";
        color = "danger";
    }
}
@section Scripts{
    <script>
        $("#selectHD").change(function () {

            var $form = $(this).closest('form');
            $form.find('button[type=submit]').click();

        });
        setTimeout(function () {
            $('#msHD').fadeOut('slow');
        }, 1500)
    </script>

}


    <div class="container py-1" style="background-color: #f1f1f1;">
       
        <div class="container" style="background-color: rgb(255, 255, 255);">
            <div class="py-3">
                <h6>
                    <div>
                        <form asp-action="Index" class="row">
                            <div class="col-5 mb-3">
                                <input type="text" name="timkiem" class="form-control" placeholder="Mời bạn nhập mã hóa đơn để tìm kiếm">
                            </div>
                            <div class="col-2">
                                <button type="submit" class="btn btn-secondary">Tìm kiếm</button>
                            </div>
                         
                            <div class="col-5 mb-3">
                                <select id="selectHD" name="trangThai" class="form-select" aria-label="Default select example">
                                    <option selected>Chọn trạng thái</option>
                                   
                                    <option value="6">Vô hiệu hóa</option>
                                    <option value="1">Đặt hàng</option>
                                    <option value="2">Đã thanh toán</option>
                                   @* <option value="3">Đơn hàng thanh toán thất bại</option>*@
                                   @* <option value="4">Trả hàng</option>*@
                                    <option value="5">Thành công</option>
                                    <option value="7">Khách không đăng nhập</option>
                                    <option value="8">Đơn hàng đã xác nhận</option>
                                    <option value="4">Đơn hàng giao thất bại</option>
                                </select>
                            </div>
                        </form>

                       
                    </div>
                </h6>
            </div>
        </div>
        <br>
        <div class="container" style="background-color: rgb(255, 255, 255);">
            <div class="py-1">
            @if (mess != "")
            {
                <div class="alert alert-@color" id="msHD" role="alert">
                    @mess
                </div>
            }
            <p>
                @*@if (ViewBag.NXB != null)
                {
                    <span>Trang @(ViewBag.DataHDPageCount < ViewBag.DataHD.PageNumber ? 0 : ViewBag.DataHD.PageNumber) / @ViewBag.DataHD.PageCount</span>
                }*@
                <div class="mb-2"> <i class="fa-solid fa-square text-info"></i> Đơn hàng mới </div>
                <table class="table">
                    <thead class="table-secondary">
                        <tr>
                            <th>Mã hóa đơn</th>
                            <th>Tên khách hàng</th>
                          
                           
                            <th>Ngày mua</th>
                            <th>Tổng tiền </th>
                            <th>Trạng Thái</th>
                            <th>Chi Tiết</th>
                            <th>Chức Năng</th>
                           
                           
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.DataHD.Count == 0)
                        {
                            <tr><th>Không có hóa đơn</th></tr>
                        }
                        else
                        {
                            @foreach (var a in ViewBag.DataHD)
                            {
                                var coler = "";
                                @if (@a.hoaDon.TrangThai == 1 || @a.hoaDon.TrangThai == 2)
                                {
                                    @*coler = "Green2";*@
                                    coler = "table-info";

                                }
                                <tr class="@coler">
                                    <td >@a.hoaDon.ID_HoaDon</td>
                                    <td>@a.KhachHang.HoVaTen</td>
                                    <td >@a.hoaDon.NgayMua</td>
                                    <td>@a.hoaDon.TongTien.ToString("#,##0").Replace(',', '.')đ</td>

                                    <td >
                                        
                                            @if (@a.hoaDon.TrangThai == 6)
                                            {
                                                <p>Vô hiệu hóa</p>
                                            }
                                            else if (@a.hoaDon.TrangThai == 1)
                                            {
                                                <p>Đặt hàng</p>
                                            }
                                            else if (@a.hoaDon.TrangThai == 2)
                                            {
                                                <p>Đã thanh toán</p>
                                            }
                                            else if (@a.hoaDon.TrangThai == 4)
                                            {
                                                <p>Giao hàng thất bại </p>
                                            }
                                            
                                            else if (@a.hoaDon.TrangThai == 5)
                                            {
                                                <p>Thành công </p>
                                            }else if (@a.hoaDon.TrangThai == 7)
                                            {
                                                <p>Đơn hàng bị hủy </p>
                                            }else if (@a.hoaDon.TrangThai == 8)
                                            {
                                                <p>Đơn hàng đã xác nhận </p>
                                            }
                                            else if (@a.hoaDon.TrangThai == 9)
                                            {
                                                <p>Đang giao </p>
                                            }
                                        
                                      
                                    </td>
                                    <td ><a asp-controller="HoaDon" asp-action="ChiTiet" asp-route-id="@a.hoaDon.ID_HoaDon">Chi Tiết</a> </td>
                                    <td>
                                        <form asp-controller="HoaDon" asp-action="Sua">

                                            @* <input name="dd" type="hidden" value=" @item.hoaDon.ID_HoaDon">*@
                                           <div style="display: flex;">

                                                <div class="combobox-HD" style="margin-right:10px;">
                                                    <select class="form-select" name="name" aria-label="Default select example">
                                                        <option value="">Tất cả</option>
                                                        @if (a.hoaDon.TrangThai == 1 || a.hoaDon.TrangThai == 2){

                                                        <option value="8">Xác nhận đơn hàng</option>
                                                     
                                                            
                                                        }
                                                        @if (a.hoaDon.TrangThai  ==  9)
                                                        {
                                                             <option value="4">Đơn hàng giao thất bại</option>
                                                            <option value="5">Thành công</option>

                                                        }
                                                        @if (a.hoaDon.TrangThai == 8)
                                                        {
                                                            <option value="9">Đang giao hàng</option>
                                                           
                                                        }
                                                     
                                                       
                                                        
                                                       

                                                    </select>
                                                </div>
                                                <div>
                                                    <button type="submit" class="btn btn-primary">Lưu </button>

                                                </div>
                                           </div>
                                            <div>
                                                <input name="id" type="hidden" value="@a.hoaDon.ID_HoaDon">

                                            </div>




                                        </form>
                                    </td>

                                   
                                </tr>

                               
                            }
                        }

                    </tbody>

                </table>

                @Html.PagedListPager((IPagedList)ViewBag.DataHD, page => Url.Action("Index","HoaDon",new {timKiem = ViewBag.TimKiem, trangThai =ViewBag.TrangThai, page = page}),new X.PagedList.Web.Common.PagedListRenderOptions{LiElementClasses = new string[] { "page-item" },PageClasses = new string[] { "page-link" }})

            </p>
        </div>
    </div>
</div>


