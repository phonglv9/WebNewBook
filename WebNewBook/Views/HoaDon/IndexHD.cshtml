@using WebNewBook.Model

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<!-- SECTION -->

  


    <div class="container">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Hóa Đơn</h1>
    <form asp-controller="HoaDon" asp-action="Index" method="get" class="form-inline md-form mr-auto mb-4">
        <div class="timkiem" style="margin-left: 880px; margin-bottom: 10px;">
            <button class="aa  btn aqua-gradient btn-rounded btn-sm my-0" style="background: #2c55a5;color: white;" type="submit">Search</button>
            <input class="form-control mr-sm-2" name="timkiem" type="text" placeholder="Search" aria-label="Search">
            
        </div>
       
    </form>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
           
        <div class="card-body">
            <div class="table-responsive">
               
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                        <thead>
                            <tr>
                                <th>Tên khách hàng</th>
                                <th>Tổng tiền </th>
                                <th>Tên sản phẩm</th>
                                <th>Ngày mua</th>
                                <th>số lượng</th>
                                <th>Trạng Thái</th>
                                <th>Chi Tiết</th>
                                 <th>UpDate</th>
                            </tr>
                        </thead>
                        @if (ViewBag.data != null)
                        @foreach (var a in ViewBag.data)
                        {
                            <tbody>
                                <tr>
                                    <td>@a.KhachHang.HoVaTen</td>
                                    <td>@a.hoaDon.TongTien</td>
                                    <td>@a.sanPham.TenSanPham</td>
                                    <td>@a.hoaDon.NgayMua</td>
                                    <td>@a.hoaDonCT.SoLuong</td>
                                        <td>
                                            @if (@a.hoaDon.TrangThai==0){
                                                <h4>Không tồn tại</h4>
                                            }
                                            else if (@a.hoaDon.TrangThai == 1)
                                            {
                                                <h4>Đặt hàng</h4>
                                            }
                                            else if (@a.hoaDon.TrangThai == 2)
                                            {
                                                <h4>Đã thanh toán</h4>
                                            }
                                            else if (@a.hoaDon.TrangThai == 3)
                                            {
                                                <h4>Đơn hàng thanh toán thất bại</h4>
                                            }
                                            else if (@a.hoaDon.TrangThai == 4)
                                            {
                                                <h4>Trả hàng</h4>
                                            }
                                            else  
                                            {
                                                <h4>Thành công </h4>
                                            }
                                        </td>
                                    <td><a asp-action="ChiTiet" asp-route-id="@a.hoaDonCT.ID_HDCT">Chi Tiết</a> </td>
                                    <td>
                                        <form asp-controller="HoaDon" asp-action="Sua" method="post">

                                            @* <input name="dd" type="hidden" value=" @item.hoaDon.ID_HoaDon">*@
                                            <p>
                                                <select type="hidden" name="id">

                                                    <option value="@a.hoaDon.ID_HoaDon"></option>

                                                </select>

                                                <div>
                                                    <select class="form-select" name="name" aria-label="Default select example">
                                                        <option value="0">Không tồn tại</option>
                                                        <option value="1">Đặt hàng</option>
                                                        <option value="2">Đã thanh toán</option>
                                                        <option value="3">Đơn hàng thanh toán thất bại</option>
                                                        <option value="4">Trả hàng</option>
                                                        <option value="5">Thành công</option>

                                                    </select>

                                                    <button type="submit" class="btn btn-primary">Save </button>
                                                </div>
                                                
                                            </p>

                                        </form>
                                    </td>

                                </tr>


                            </tbody>
                        }

                    </table>
                   
					

               
            </div>
        </div>
           
        </div>

    </div>

	