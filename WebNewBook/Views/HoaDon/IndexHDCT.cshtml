                            <h2>Hóa đơn</h2>
                        </div>

                    </div>


                    <div class="row">
                        <div class="col-xl-8">
                            <ul class="list-unstyled">
                                <li class="font-weight-bold">
                                    Họ tên người nhận: <span style="color:#0d6efd ;">
                                        @if (ViewBag.Namekh != null)
                                        {
                                            @ViewBag.Namekh
                                        }
                                    </span>
                                    <!-- Button Người nhận -->
