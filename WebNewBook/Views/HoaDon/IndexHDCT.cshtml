                                                            <label for="diachi" class="form-label">Địa chỉ</label>
                                                            <input type="text" asp-for="hoaDon.DiaChiGiaoHang" value="@ViewBag.diachi" class="form-control" id="diachi">
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="sdt" class="form-label">Số điện thoại</label>
