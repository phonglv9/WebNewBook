@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    var lstvoucher = ViewBag.lstvoucher;

}
@using WebNewBook.Model
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model Voucher

<div class="container py-3" style="background-color: #f1f1f1;">
    <div id="load" style="display : block" class="loading">
        <div class="spinner-border text-primary spinner-center" role="status"></div>
    </div>
    <h3 style="font-weight: 700;">Phát hành voucher</h3>
    <div class="container " style="background-color: rgb(255, 255, 255);">
        <div class="py-3">
            <h6>
                <div class="row">
                    <form action="" class="col-12 row">
                        <div class="col-3 ">
                            <input type="text" name="search" class="form-control" placeholder="Mã phát hành,Tên phát hành...">
                        </div>
                        <div class="col-2 ">
                            <input type="date" name="startdate" class="form-control">
                        </div>
                        -
                        <div class="col-2 ">
                            <input type="date" name="enddate" class="form-control">
                        </div>
                        <div class="col-2">
                            <select name="type" class="form-select" aria-label="Default select example">
                                <option selected>Chọn Hình thức</option>
                                <option value="1">Đổi điểm</option>
                                <option value="2">Tặng</option>

                            </select>
                        </div>
                        <div class="col-2">
                            <button type="submit" asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-magnifying-glass"></i> Tìm kiếm</button>
                        </div>
                    </form>
                    <div class="col-3 my-3">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary "
                                data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                            <i class="fa-solid fa-plus"></i> Thêm đợt phát hành
                        </button>
                        <!-- Modal -->
                        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static"
                             data-bs-keyboard="false" tabindex="1" aria-labelledby="staticBackdropLabel"
                             aria-hidden="true">
                            <div class="modal-dialog modal-xl">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h6 class="modal-title" id="staticBackdropLabel">
                                            Thêm đợt phát hành voucher
                                        </h6>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form>
                                            <div class="row">
                                                <input type="hidden" asp-for="Id" value="null" />
                                                <input type="hidden" asp-for="MaNhanVien" value="null" />


                                                <div class="col-6">
                                                    <div class="mb-3 row ">
                                                        <label for="" class="col-sm-4 col-form-label">
                                                            Tên đợt phát hành <span class="text-danger">*</span>
                                                        </label>
                                                        <div class="col-sm-8">
                                                            <input asp-for="TenPhatHanh" type="text" class="form-control">
                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label for="" class="col-sm-4 col-form-label">
                                                            Mệnh giá <span class="text-danger">*</span>
                                                        </label>
                                                        <div class="col-sm-8">
                                                            <input asp-for="MenhGia" type="number" class="form-control">
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="col-6">

                                                    <div class="mb-3 row">
                                                        <label for="" class="col-sm-3 col-form-label">
                                                            Tổng tiền hàng<span class="text-danger">*</span>
                                                        </label>
                                                        <div class="col-sm-9">
                                                            <input asp-for="MenhGiaDieuKien" type="number" class="form-control">
                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label class="col-sm-3 col-form-label">
                                                            Ghi chú
                                                        </label>
                                                        <div class="col-sm-9">
                                                            <input asp-for="GhiChu" type="text" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-7 row">
                                                    <label for="" class="col-3 col-form-label">
                                                        Thời gian <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="offset-2 col-sm-8 mx-3 mb-3 row">
                                                        <div class="col-sm-5">
                                                            <input asp-for="StartDate" type="date" class="form-control">

                                                        </div>
                                                        -
                                                        <div class="col-sm-5">
                                                            <input asp-for="EndDate" type="date" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-6 row">
                                                    <label for="" class="col-5 col-form-label">
                                                        Hình thức <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-sm-7 mb-3 row">
                                                        <div onclick="ChonHinhThuc()" class="col-sm-5 form-check">
                                                            <input class="form-check-input" type="radio" name="chon"
                                                                   checked id="Tang">
                                                            <label class="form-check-label" for="Tang">
                                                                Tặng
                                                            </label>
                                                        </div>
                                                        <div onclick="ChonHinhThuc()" class="col-sm-5 form-check ">
                                                            <input class="form-check-input" type="radio" name="chon"
                                                                   id="DoiDiem">
                                                            <label class="form-check-label" for="DoiDiem">
                                                                Đổi điểm
                                                            </label>
                                                        </div>
                                                    </div>

                                                </div>

                                                <div id="Div_diem" hidden class="col-7">
                                                    <div class="mb-3 row ">
                                                        <label for="" class="col-sm-3 col-form-label">
                                                            Điểm <span class="text-danger">*</span>
                                                        </label>
                                                        <div class="mx-4 col-sm-7">
                                                            <input asp-for="DiemDoi" type="number" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                        <button type="button" id="btnAddPhatHanh" class="btn btn-primary">Lưu</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </h6>
        </div>
    </div>
    <br>
    <div class="container " style="background-color: rgb(255, 255, 255);">
        <div style="padding: 10px;">
            @if (lstvoucher != null)
            {
                <span>Trang @(lstvoucher.PageCount < lstvoucher.PageNumber ? 0 : lstvoucher.PageNumber) / @lstvoucher.PageCount</span>
            }
            <p>
                <table class="table ">
                    <thead class="table-secondary ">
                        <tr>
                            <th scope="col">Mã phát hành</th>
                            <th scope="col">Tên phát hành</th>
                            <th scope="col">Từ ngày</th>
                            <th scope="col">Đến ngày</th>
                            <th scope="col">Số lượng</th>
                            <th scope="col">Mệnh Giá</th>
                            <th scope="col">Hình thức</th>
                            <th scope="col" style="text-align: center ;">Thao tác</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in lstvoucher)
                        {
                            <tr>
                                <td>@x.Id</td>
                                <td>@x.TenPhatHanh</td>
                                <td>@x.StartDate.ToString("d/M/yyyy")</td>
                                <td>@x.EndDate.ToString("d/M/yyyy")</td>
                                <td>@x.SoLuong</td>
                                <td>@x.MenhGia</td>
                                <td>@(x.HinhThuc == 1 ? "Đổi điểm" : "Tặng")</td>

                                <td>
                                    <button data-bs-toggle="modal" data-bs-target="#updateVoucher_@x.Id" class="btn btn-secondary"><i class="fa-solid fa-circle-info"></i></button>
                                    <a class="btn btn-dark" asp-action="Detail" asp-route-Id="@x.Id"><i class="fa-solid fa-arrow-right"></i></a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@x.Id"><i class="fa-solid fa-trash"></i></a>
                                </td>

                            </tr>

                            <div class="modal fade " id="updateVoucher_@x.Id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                <div class="modal-dialog modal-xl ">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="staticBackdropLabel">Sửa thông tin khách hàng</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <form>
                                            <div class="row p-3">
                                                <input type="hidden" value="@x.Id" asp-for="Id" value="null" />
                                                <input type="hidden" asp-for="MaNhanVien" value="@x.MaNhanVien" />


                                                <div class="col-6">
                                                    <div class="mb-3 row ">
                                                        <label for="" class="col-sm-4 col-form-label">
                                                            Tên đợt phát hành <span class="text-danger">*</span>
                                                        </label>
                                                        <div class="col-sm-8">
                                                            <input asp-for="TenPhatHanh" value="@x.TenPhatHanh" type="text" class="form-control">
                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label for="" class="col-sm-4 col-form-label">
                                                            Mệnh giá <span class="text-danger">*</span>
                                                        </label>
                                                        <div class="col-sm-8">
                                                            <input asp-for="MenhGia" value="@x.MenhGia" type="number" class="form-control">
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="col-6">

                                                    <div class="mb-3 row">
                                                        <label for="" class="col-sm-3 col-form-label">
                                                            Tổng tiền hàng<span class="text-danger">*</span>
                                                        </label>
                                                        <div class="col-sm-9">
                                                            <input asp-for="MenhGiaDieuKien" value="@x.MenhGiaDieuKien" type="number" class="form-control">
                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label class="col-sm-3 col-form-label">
                                                            Ghi chú
                                                        </label>
                                                        <div class="col-sm-9">
                                                            <input asp-for="GhiChu" value="@x.GhiChu" type="text" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-7 row">
                                                    <label for="" class="col-3 col-form-label">
                                                        Thời gian <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="offset-2 col-sm-8 mx-3 mb-3 row">
                                                        <div class="col-sm-5">
                                                            <input asp-for="StartDate" type="date" value="@x.StartDate.ToString("yyyy-MM-dd")" class="form-control">

                                                        </div>
                                                        -
                                                        <div class="col-sm-5">
                                                            <input asp-for="EndDate" value="@x.EndDate.ToString("yyyy-MM-dd")" type="date" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-6 row">
                                                    <label for="" class="col-5 col-form-label">
                                                        Hình thức <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-sm-7 mb-3 row">
                                                        <div onclick="ChonHinhThuc()" class="col-sm-5 form-check">
                                                            <input class="form-check-input" type="radio" name="chon"
                                                               checked id="Tang">
                                                            <label class="form-check-label" for="Tang">
                                                                Tặng
                                                            </label>
                                                        </div>
                                                        <div onclick="ChonHinhThuc()" class="col-sm-5 form-check ">
                                                            <input class="form-check-input" type="radio" name="chon"
                                                               id="DoiDiem">
                                                            <label class="form-check-label" for="DoiDiem">
                                                                Đổi điểm
                                                            </label>
                                                        </div>
                                                    </div>

                                                </div>

                                                <div id="Div_diem" hidden class="col-7">
                                                    <div class="mb-3 row ">
                                                        <label for="" class="col-sm-3 col-form-label">
                                                            Điểm <span class="text-danger">*</span>
                                                        </label>
                                                        <div class="mx-4 col-sm-7">
                                                            <input asp-for="DiemDoi" type="text" class="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                <button type="button" id="btnAddPhatHanh" class="btn btn-primary">Lưu</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                        }
                    </tbody>
                </table>
                @Html.PagedListPager((IPagedList)lstvoucher, page => Url.Action("Index","Voucher",new { page = page,    search=    ViewBag.Search,  startdate= ViewBag.Startdate,    enddate=  ViewBag.Enddate , type=  ViewBag.Type }),new X.PagedList.Web.Common.PagedListRenderOptions{LiElementClasses = new string[] { "page-item" },PageClasses = new string[] { "page-link" }})
            </p>
        </div>
    </div>
</div>


<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script>
    document.getElementById("load").style.display = 'none';
    var tang = document.getElementById("Tang")
    var doi = document.getElementById("DoiDiem")

    if (tang.checked == true) {
        document.getElementById("Div_diem").hidden = true
    }
    if (doi.checked == true) {
        document.getElementById("Div_diem").hidden = false

    }
    function ChonHinhThuc() {


        if (tang.checked == true) {
            document.getElementById("Div_diem").hidden = true
        }
        if (doi.checked == true) {
            document.getElementById("Div_diem").hidden = false

        }
    }

    $(function () {

        var tang = document.getElementById("Tang");
        var doiDiem = document.getElementById("DoiDiem");

        //Phát hành Voucher
        $("#btnAddPhatHanh").click(function () {
            var tenPhatHanh = $("#TenPhatHanh").val()
            var menhGia = $("#MenhGia").val()
            var menhGiaDK = $("#MenhGiaDieuKien").val()
            var ghiChu = $("#GhiChu").val()
            var startDate = $("#StartDate").val()
            var enddate = $("#EndDate").val()
            var diemdoi = null
            var hinhthuc = 2;
            var date = new Date();
            var today = date.getFullYear() + '-' + (date.getMonth() + 1) + '-' + date.getDate();



            if (doiDiem.checked == true) {
                hinhthuc = 1;
                diemdoi = $("#DiemDoi").val()
            }
            if (ghiChu == "") {
                ghiChu = "(Không có)"
            }

            if (((tenPhatHanh && menhGia && menhGiaDK && startDate && enddate) != "") && (doiDiem.checked == true ? (diemdoi != "" ? true : false) : true)) {
                if (tenPhatHanh.length > 6) {
                    if (menhGia >= 1000 && menhGiaDK >= 1000) {
                        if (menhGia <= 1000000) {
                            if (startDate >= today) {
                                if (startDate <= enddate) {
                                    Swal.fire({
                                        title: 'Bạn có chắc chắn muốn thêm không?',
                                        showCancelButton: true,
                                        confirmButtonText: 'Save',

                                    }).then((result) => {
                                        /* Read more about isConfirmed, isDenied below */
                                        if (result.isConfirmed) {
                                            $.ajax({
                                                type: "POST",
                                                data: {
                                                    TenPhatHanh: tenPhatHanh,
                                                    MenhGia: menhGia,
                                                    Ghichu: ghiChu,
                                                    StartDate: startDate,
                                                    Enddate: enddate,
                                                    DiemDoi: diemdoi,
                                                    HinhThuc: hinhthuc
                                                },
                                                url: "/Voucher/Add",
                                                success: function (response) {
                                                    if (response == 1) {
                                                        Swal.fire({
                                                            text: "Thành công !",
                                                            timer: 1500,
                                                            timerProgressBar: true,
                                                            showConfirmButton: false,
                                                            position: 'bottom-end',
                                                            width: 300,

                                                            height: 50,
                                                            color: '#66a15a',
                                                            background: '#ffffff',

                                                        }).then((result) => {
                                                            /* Read more about handling dismissals below */
                                                            if (result.dismiss === Swal.DismissReason.timer) {
                                                                console.log('I was closed by the timer')
                                                            }
                                                        })

                                                        setTimeout(function () {
                                                            document.getElementById("load").style.display = 'block';
                                                            window.location.reload(1);


                                                        }, 2000);
                                                    } else {
                                                        Swal.fire({
                                                            text: "Thất bại !",
                                                            timer: 1500,
                                                            timerProgressBar: true,
                                                            showConfirmButton: false,
                                                            position: 'bottom-end',
                                                            width: 300,

                                                            height: 50,
                                                            color: '#66a15a',
                                                            background: '#ffffff',

                                                        }).then((result) => {
                                                            /* Read more about handling dismissals below */
                                                            if (result.dismiss === Swal.DismissReason.timer) {
                                                                console.log('I was closed by the timer')
                                                            }
                                                        })

                                                    }

                                                }
                                            });
                                        }
                                    })
                                } else {
                                    alert("Thời san kết thúc không được trước ngày bắt đầu")
                                }
                            } else {
                                alert("Ngày bắt đầu không được trước ngày hôm nay")
                            }

                        } else {
                            alert("Mệnh giá voucher không được vượt quá 1.000.000 đ")
                        }

                    } else {
                        alert("Số tiền phải lớn hơn hoặc bằng 1.000 đ")
                    }

                } else {
                    alert("Tên Phát hành phải trên 6 kí tự")
                }
            } else {
                alert("Không được để trống ô có *")
            }


        });
    });


</script>