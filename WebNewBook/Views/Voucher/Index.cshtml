@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    var lstvoucher = ViewBag.lstvoucher;

}
@using WebNewBook.Model
@model Voucher
<style>
    td{
        font-size :13px;
    }
</style>
<div class="container py-3" style="background-color: #f1f1f1;">
    <h3 style="font-weight: 700;">Phát hành voucher</h3>
    <div class="container " style="background-color: rgb(255, 255, 255);">
        <div class="py-3">
            <h6>
                <div class="row">
                    <form action="" class="col-8">
                        <div class="col-5 mb-3">
                            <input type="email" class="form-control" placeholder="Mã phát hành,...">
                        </div>
                        <div class="col-3">
                            <button type="submit" class="btn btn-secondary">Tìm kiếm</button>
                        </div>
                    </form>
                    <div class="col-3 offset-1">
                        <!-- Button trigger modal -->
                        <button style="font-size: 12.7px;" type="button" class="btn btn-lg btn-primary px-5"
                                data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                            <i class="fa-solid fa-address-book"></i> Thêm đợt phát hành mới
                        </button>
                        <!-- Modal -->
                        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static"
                             data-bs-keyboard="false" tabindex="1" aria-labelledby="staticBackdropLabel"
                             aria-hidden="true">
                            <div class="modal-dialog modal-xl">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h6 class="modal-title" id="staticBackdropLabel">
                                            Thêm đợt phát hành voucher
                                        </h6>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div>
                                            <nav>
                                                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                                    <button class="nav-link active" id="nav-thongtin-tab"
                                                            data-bs-toggle="tab" data-bs-target="#nav-thongtin"
                                                            type="button" role="tab" aria-controls="nav-thongtin"
                                                            aria-selected="true">
                                                        Thông tin
                                                    </button>
                                                    <button class="nav-link" id="nav-apdung-tab"
                                                            data-bs-toggle="tab" data-bs-target="#nav-apdung"
                                                            type="button" role="tab" aria-controls="nav-apdung"
                                                            aria-selected="false">
                                                        Áp dụng
                                                    </button>

                                                </div>
                                            </nav>
                                            <form asp-action="Add">
                                                <input type="hidden" asp-for="Id" value="null" />
                                                <input type="hidden" asp-for="MaNhanVien" value="null" />
                                                <div class="tab-content" id="nav">
                                                    <div class="tab-pane fade show active my-3" id="nav-thongtin"
                                                         role="tabpanel" aria-labelledby="nav-thongtin-tab">
                                                        <div class="row ">
                                                            <div class="col-6 ">
                                                                <div class="mb-3 row ">
                                                                    <label for="" class="col-sm-4 col-form-label">
                                                                        Tên đợt phát hành
                                                                    </label>
                                                                    <div class="col-sm-8">
                                                                        <input asp-for="TenPhatHanh" type="text" class="form-control">
                                                                    </div>
                                                                </div>
                                                                <div class="mb-3 row">
                                                                    <label for="" class="col-sm-4 col-form-label">
                                                                        Mệnh giá
                                                                    </label>
                                                                    <div class="col-sm-8">
                                                                        <input asp-for="MenhGia" type="number" class="form-control">
                                                                    </div>
                                                                </div>
                                                                <div class="mb-3 row">
                                                                    <label for="" class="col-sm-4 col-form-label">
                                                                        Tình trạng
                                                                    </label>
                                                                    <div class="col-sm-8">
                                                                        <div class="form-check form-switch">
                                                                            <input class="form-check-input"
                                                                                   type="checkbox" role="switch"
                                                                                   id="flexSwitchCheckCheckedDisabled">
                                                                            <label class="form-check-label"
                                                                                   for="flexSwitchCheckCheckedDisabled">
                                                                                Kích hoạt hoặc chưa kích hoạt
                                                                            </label>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-6">
                                                                <!-- <div class="mb-3 row">
                                                                    <label for="" class="col-sm-3 col-form-label">Địa chỉ</label>
                                                                    <div class="col-sm-9">
                                                                        <input type="text" class="form-control">
                                                                    </div>
                                                                </div> -->
                                                                <div class="mb-3 row">
                                                                    <label for="" class="col-sm-3 col-form-label">
                                                                        Tổng tiền hàng
                                                                    </label>
                                                                    <div class="col-sm-9">
                                                                        <input asp-for="MenhGiaDieuKien" type="number" class="form-control">
                                                                    </div>
                                                                </div>
                                                                <div class="mb-3 row">
                                                                    <label class="col-sm-3 col-form-label">
                                                                        Ghi chú
                                                                    </label>
                                                                    <div class="col-sm-9">
                                                                        <input asp-for="GhiChu" type="text" class="form-control">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class=" offset-10">
                                                                <button type="submit" style="font-size: 12px;"
                                                                        class="btn btn-success col-1">
                                                                    <i class="fa-solid fa-square-check"></i>Lưu
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="tab-pane fade  active" id="nav-apdung" role="tabpanel"
                                                         aria-labelledby="nav-apdung-tab">

                                                        <div class="my-3">
                                                            <p>Thời gian áp dụng</p>
                                                            <div class="mb-3 row">

                                                                <div class="col-sm-3">
                                                                    <input asp-for="StartDate" type="date" class="form-control">
                                                                </div>

                                                                đến


                                                                <div class="col-sm-3">
                                                                    <input asp-for="EndDate" type="date" class="form-control">
                                                                </div>
                                                            </div>

                                                            <p>Phạm vi áp dụng</p>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="radio" name="chon"
                                                                       id="addkhachhang" checked>
                                                                <label class="form-check-label" for="addkhachhang">
                                                                    Toàn bộ khách hàng
                                                                </label>
                                                            </div>
                                                            <div class="form-check ">
                                                                <input class="form-check-input" type="radio" name="chon"
                                                                       id="theonhom">
                                                                <label class="form-check-label" for="theonhom">
                                                                    Nhóm khách hàng

                                                                </label>

                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
            </h6>
        </div>
    </div>
    <br>
    <div class="container " style="background-color: rgb(255, 255, 255);">
        <div style="padding-top: 20px;">
            <p>
                <table class="table table-borderless">
                    <thead class="table-secondary ">
                        <tr>
                            <th scope="col">Mã phát hành</th>
                            <th scope="col">Tên phát hành</th>
                            <th scope="col">Từ ngày</th>
                            <th scope="col">Đến ngày</th>
                            <th scope="col">Số lượng</th>
                            <th scope="col">Mệnh Giá</th>
                            <th scope="col">Trạng thái</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in lstvoucher)
                        {
                            <tr>
                                <td>@x.Id</td>
                                <td>@x.TenPhatHanh</td>
                                <td>@x.StartDate.ToString("d/M/yyyy")</td>
                                <td>@x.EndDate.ToString("d/M/yyyy")</td>
                                <td>@x.SoLuong</td>
                                <td>@x.MenhGia</td>
                                <td>@x.TrangThai</td>
                                <td>
                                    <a asp-action="Detail" asp-route-Id="@x.Id">Chi Tiết</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </p>
        </div>
    </div>
</div>
