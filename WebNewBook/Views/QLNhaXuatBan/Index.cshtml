@using WebNewBook.Model
@model NhaXuatBan

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-3" style="background-color: #f1f1f1;">
    <h3 style="font-weight: 700;">Sản phẩm</h3>
    <div class="container" style="background-color: rgb(255, 255, 255);">
        <div class="py-3">
            <h6>
                <div class="row">
                    <div class="col-5 mb-3">
                        <input type="text" class="form-control" placeholder="Mời bạn nhập tên nhà xuất bản để tìm kiếm">
                    </div>
                      <div class="col-2">
                        <button type="submit" class="btn btn-secondary">Tìm kiếm</button>
                    </div>
                    <div class="col-5 mb-3">
                        <select class="form-select" aria-label="Default select example">
                            <option selected>Chọn trạng thái</option>
                            <option value="1">Hoạt động</option>
                            <option value="0">Không hoạt động</option>
                        </select>
                    </div>
                  
                   
                    <div class="col-3">
                        <!-- Button trigger modal -->
                        <a type="button" class="btn btn-primary"asp-action="Create">
                            <i class="fa-solid fa-address-book"></i> Thêm sản phẩm
                        </a>
                    </div>
                </div>
            </h6>
        </div>
    </div>
    <br>
    <div class="container " style="background-color: rgb(255, 255, 255);">
        <div class="py-3">
            <p>
                <table class="table">
                    <thead class="table-secondary">
                        <tr>
                            <th scope="col">Tên nhà xuất bản </th>
                            <th scope="col">Trạng thái</th>
                            <th colspan="2" style="text-align: center ;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in  ViewBag.NhaXuatBan)
                        {
                            var trangThai = item.TrangThai == 0 ? "Hoạt động" : "Vô hiệu hóa";
                          
                            <tr>
                                <th scope="row">@item.TenXuatBan</th>                          
                                <td>@trangThai</td>
                                <td><a type="button" class="btn border bg-primary" asp-action="Update" asp-route-id="@item.ID_NXB"><i class="fa-solid fa-pen"></i></a></td>
                                <td><button class="btn border bg-danger" data-bs-toggle="modal" data-bs-target="#delete-@item.ID_NXB"><i class="fa-solid fa-trash"></i></button></td>
                            </tr>

                             <!-- Modal Delete-->
                            <form action="/QLNhaXuatBan/Delete?id=@item.ID_NXB" method="post" enctype="multipart/form-data">
                                <div class="modal fade" id="delete-@item.ID_NXB" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="staticBackdropLabel">Đổi trạng thái sản phẩm</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-3 row">
                                                    <label for="ID_SanPham" class="col-sm-2 col-form-label">ID</label>
                                                    <input for="ID_SanPham" class="form-control" name="ID" value="@item.ID_NXB" disabled/>
                                                </div>
                                                <div class="mb-3 row">
                                                    <label for="TenSanPham" class="control-label">Tên sản phẩm</label>
                                                    <input for="TenSanPham" class="form-control" name="nhanVien" value="@item.TenXuatBan" disabled/>
                                                </div>                                              
                                                <div class="mb-3 row">
                                                    <label for="Quyen" class="control-label">Trạng thái</label>
                                                    <input for="Quyen" class="form-control" name="soLuongNhap" value="@trangThai" disabled/>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-primary">Đổi trạng thái</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        }
                    </tbody>
                </table>
            </p>
        </div>
    </div>
</div>


