@using WebNewBook.Model
@model List<DanhMucSach>
<!-- HEADER -->
<header>
	<!-- TOP HEADER -->
	<div id="top-header">
		<div class="container">
			<ul class="header-links pull-left">
				<li><a href="#"><i class="fa fa-phone"></i> 0332579815</a></li>
				<li><a href="#"><i class="fa fa-envelope-o"></i> newbook2299@gmail.com</a></li>
				<li><a href="#"><i class="fa fa-map-marker"></i> 322/95 Mỹ Đình </a></li>
			</ul>
			<ul class="header-links pull-right">
				<li><a href="#">Đăng nhập</a></li>
				<li><a href="#">Đăng kí</a></li>
				<li><a href="#">Quên mật khẩu</a></li>
				
				

			</ul>
		</div>
	</div>
	<!-- /TOP HEADER -->
	<!-- MAIN HEADER -->
	<div id="header">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<!-- LOGO -->
				<div class="col-md-3">
					<div class="header-logo">
						<a href="#" class="logo">
							<img src="~/img/logo.png" width="130px" alt="">
						</a>
					</div>
				</div>
				<!-- /LOGO -->
				<!-- SEARCH BAR -->
				<div class="col-md-6">
					<div class="header-search">
						<form asp-controller="Home" asp-action="Product" method="get">
							@if (Model != null)
							{


								<select class="input-select" asp-items="@(new SelectList(Model,"ID_DanhMuc","TenDanhMuc"))" name="iddanhmuc">
									<option value="Tất cả sách">Tất cả sách</option>
									
								</select>
							}
							<input class="input" name="search" value="@ViewData["CurrentFilter"]" placeholder="Nhập từ khóa để tìm kiếm">
							<button class="search-btn" type="submit">Tìm kiếm</button>
						</form>
					</div>
				</div>
				<!-- /SEARCH BAR -->
				<!-- ACCOUNT -->
				<div class="col-md-3 clearfix">
					<div class="header-ctn">
						<!-- Wishlist -->




						<div class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<i class="fa fa-user-o"></i>
								<span>Tài khoản</span>
							</a>
							<div class="dropdown-menu">
								
								<div><a href="">Đăng nhập</a></div>
								<div><a href="">Đăng ký</a></div>
								<div><a href="">Quên mật khẩu</a></div>

							</div>
						</div>



						<!-- /Wishlist -->
						<!-- Cart -->
						<div class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
								<i class="fa fa-shopping-cart"></i>
								<span>Giỏ hàng</span>
								<div class="qty">
									@if (ViewBag.count != null)
										@ViewBag.count
										</div>

							</a>
							<div class="cart-dropdown">
								@if (ViewBag.giohang.Count != null && ViewBag.giohang.Count != 0 && ViewBag.thanhtien != 0 && ViewBag.soluong != 0)
								{
								<div class="cart-list">
									@if(ViewBag.giohang != null)
									@foreach (var a in ViewBag.giohang){
										<div class="product-widget">
										<div class="product-img">
											<img src="./img/product01.png" alt="">
										</div>
										<div class="product-body">
														<h3 class="product-name"><a asp-controller="Home" asp-action="ProductDetaill" asp-route-id="@a.Maasp">@a.Tensp</a></h3>
													<h4 class="product-price"><span class="qty">@a.Soluong x</span> @a.DonGia</h4>
										</div>
										<button class="delete"><i class="fa fa-close"></i></button>
									</div>
									}
									
									
									

									
								</div>
								<div class="cart-summary">
									
										@if (ViewBag.soluong != null){

										<small>
											Tổng số lượng: @ViewBag.soluong
										</small>
											}

										@if (ViewBag.thanhtien != null)
										{
											<h5>
											Tổng tiền:@ViewBag.thanhtien</h5>}
								</div>
								
								<div class="cart-btns">
									<a asp-action="Index" asp-controller="GioHang">Chi tiết giỏ hàng</a>
									<a href="#">Thanh toán<i class="fa fa-arrow-circle-right"></i></a>
									</div>



								}else
								{
									<div class="product-body">
										<h3 class="product-name">Giỏ hàng đang trống</h3>
									</div>
								}
							</div>
						</div>
						<!-- /Cart -->
						<!-- Menu Toogle -->
						<div class="menu-toggle">
							<a href="#">
								<i class="fa fa-bars"></i>
								<span>Menu</span>
							</a>
						</div>
						<!-- /Menu Toogle -->
					</div>
				</div>
				<!-- /ACCOUNT -->
			</div>
			<!-- row -->
		</div>
		<!-- container -->
	</div>
	<!-- /MAIN HEADER -->
</header>
<!-- /HEADER -->
<!-- NAVIGATION -->
<nav id="navigation">
	<!-- container -->
	<div class="container">
		<!-- responsive-nav -->
		<div id="responsive-nav">
			<!-- NAV -->
			<ul class="main-nav nav navbar-nav">
				<li class="active"><a href="/Home">Trang chủ</a></li>
				
				@if (Model != null)
					@foreach (var item in Model)
					{

						
						<li><a href="@Url.Action("Product", "Home", new { iddanhmuc = item.ID_DanhMuc})">@item.TenDanhMuc</a></li>
					}

			</ul>
			<!-- /NAV -->
		</div>
		<!-- /responsive-nav -->
	</div>
	<!-- /container -->
</nav>
<!-- /NAVIGATION -->